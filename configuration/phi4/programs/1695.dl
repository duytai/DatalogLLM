.decl person(p: symbol)
.decl premises(pr: symbol)
.decl drives(p: symbol, pr: symbol)
.decl driving_dangerously(p: symbol, pr: symbol)
.decl violation(p: symbol, pr: symbol)

violation(p, pr) :- person(p), premises(pr), drives(p, pr), driving_dangerously(p, pr).
person("driver1").
premises("train_platform").
drives("driver1", "train_platform").
driving_dangerously("driver1", "train_platform").
violation("driver1", "train_platform").
.output violation